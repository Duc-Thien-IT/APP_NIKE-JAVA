<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.nike">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/nikelogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nike"
        android:usesCleartextTraffic="true"
        tools:targetApi="34">
        <activity
            android:name=".Views.LoginLobby"
            android:exported="false" />
        <activity
            android:name=".Views.ForgetPasswordSuccessMessage"
            android:exported="false" />
        <activity
            android:name=".Views.ResetPasswordFrame"
            android:exported="false" />
        <activity
            android:name=".Views.VerifyOTP"
            android:exported="false" />
        <activity
            android:name=".Views.ForgotPasswordFrame"
            android:exported="false" />
        <activity
            android:name=".Views.Bag.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".LoadingMainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.RegisterFrame"
            android:exported="false" />
        <activity
            android:name=".Views.LoginFrame"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".GetConnectionExample"
            android:exported="false" />
    </application>

</manifest>