<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:drawable="@android:color/transparent" />
    <!-- Bottom border -->
    <item
        android:bottom="1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD"
                />
        </shape>
    </item>
</layer-list>