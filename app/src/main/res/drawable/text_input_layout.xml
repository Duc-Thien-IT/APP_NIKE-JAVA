<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#C6C6C6" />

    <!-- Rounded corners -->
    <corners android:radius="5dp" />

</shape>