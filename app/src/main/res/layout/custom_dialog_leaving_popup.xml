<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_border_popup_leaving"
    android:layout_margin="10dp">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Leaving Checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="23dp"/>
    <TextView

        android:gravity="start"
        android:text="Your checkout session will be lost. Do you\nwant to leave checkout?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/btnLeaveCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Checkout"
        android:textAllCaps="false"
        app:cornerRadius="50dp"/>
    <Button
        android:id="@+id/btnResumeCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cornerRadius="50dp"
        android:textColor="@color/black"
        android:text="Resume Checkout"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
</LinearLayout>