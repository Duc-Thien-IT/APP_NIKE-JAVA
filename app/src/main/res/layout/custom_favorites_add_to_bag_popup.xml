<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_border_popup_menu">>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAddToBag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/successfully_1"
            app:lottie_autoPlay="true"/>
        <TextView
            android:id="@+id/tvAddToBag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Added To Bag"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/btnViewBag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="View Bag"
            android:layout_marginTop="30dp"
            app:cornerRadius="50dp"/>
    </LinearLayout>
</LinearLayout>