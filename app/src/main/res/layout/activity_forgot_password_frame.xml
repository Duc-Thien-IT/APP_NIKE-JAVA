<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    tools:context=".Views.ForgotPasswordFrame">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/baseline_arrow_back_24"
        android:backgroundTint="@color/white"
        android:padding="20dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_back">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lock_question"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:lines="2"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:breakStrategy="high_quality"
                android:text="forget\npassword" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:textSize="14dp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:breakStrategy="high_quality"
                android:text="provide your account's email for which you want to reset your password!" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:layout_marginTop="35dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:boxBackgroundColor="#E4E1E1"
                android:hint="Email"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:startIconTint="@color/black"
                app:boxStrokeWidthFocused="3dp"
                app:hintTextColor="@color/black"
                app:errorEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_forget_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:boxBackgroundMode="outline"
                    android:paddingStart="40dp"
                    app:cornerRadius="30dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/TextInputLayout"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Next"
                android:textAllCaps="false"
                android:enabled="false"
                app:cornerRadius="50dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>