<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
 >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">
        <RelativeLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"/>
            <RelativeLayout
                android:layout_toRightOf="@id/imgThumbnail"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Air Force 1'07"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="1dp"
                    />
                <TextView
                    android:id="@+id/tvObjectName"
                    android:layout_below="@id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Men's Shoes"
                    android:layout_marginBottom="1dp"
                    />
                <TextView
                    android:id="@+id/tvShown"
                    android:layout_below="@id/tvObjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="White/White"
                    android:layout_marginBottom="1dp"
                    />
                <TextView
                    android:id="@+id/tvSize"
                    android:layout_below="@id/tvShown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="44.5"
                    android:layout_marginBottom="5dp"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_below="@id/cardViewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/r3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnQty"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Qty 5"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:textAllCaps="false"
            android:textStyle="bold"

            android:drawableEnd="@drawable/baseline_keyboard_arrow_down_24"
            android:background="@drawable/button_no_border"
            android:elevation="0dp"
             />

        <TextView
            android:layout_toRightOf="@+id/btnQty"
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:gravity="right|center"
            android:text="Ä‘2,890,000"
            android:textStyle="bold"
            android:layout_height="30dp"/>

    </RelativeLayout>
    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:layout_below="@+id/r3"
        android:background="@drawable/image_view_border"
        />

</RelativeLayout>